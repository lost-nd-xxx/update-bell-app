{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "修正付き全チェック",
      "type": "shell",
      "command": "npm",
      "args": ["run", "check:fix"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": ["$tsc", "$eslint-stylish"],
      "detail": "型チェック + ESLint自動修正 + Prettier を一括実行"
    },
    {
      "label": "開発サーバー起動",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "detail": "Vite開発サーバーを起動"
    },
    {
      "label": "本番ビルド",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": {
        "kind": "build"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": ["$tsc", "$eslint-stylish"],
      "detail": "本番用ビルドを実行"
    }
  ]
}
