{
  "name": "update-bell-app",
  "version": "1.0.0",
  "type": "module",
  "description": "URLを添えてリマインド通知するPWAアプリ",
  "keywords": [
    "reminder",
    "notification",
    "pwa",
    "bell",
    "update",
    "react"
  ],
  "author": "Update Bell",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "dev:debug": "cross-env DEBUG_SW=true vite",
    "build": "tsc && vite build",
    "build:debug": "cross-env NODE_ENV=development tsc && vite build",
    "preview": "vite preview",
    "serve": "http-server dist -p 4173 -c-1",
    "debug:sw": "npm run build && http-server dist -S -p 8443",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "type-check": "tsc --noEmit",
    "check:all": "npm run type-check && npm run lint && npm run format",
    "check:fix": "npm run type-check && npm run lint:fix && npm run format",
    "dev:https": "vite --https",
    "debug:https": "npm run build && http-server dist -S -C cert.pem -K key.pem -p 8443 -a localhost",
    "preview:https": "vite preview --https --port 8443"
  },
  "dependencies": {
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.33.0",
    "@eslint/json": "^0.13.1",
    "@types/node": "^24.2.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "http-server": "^14.1.1",
    "prettier": "^3.0.0",
    "typescript": "^5.0.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^4.4.0",
    "vite-plugin-pwa": "^0.16.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}